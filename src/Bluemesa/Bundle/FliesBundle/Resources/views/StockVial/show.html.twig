{% extends "BluemesaFliesBundle:StockVial:layout.html.twig" %}
{% use "BluemesaSiteTemplateBundle:Show:modal.html.twig" %}
{% import "BluemesaSiteTemplateBundle:Macros:show.html.twig" as s %}
{% import 'BluemesaSiteTemplateBundle:Macros:status.html.twig' as status %}

{% block modal_header %}
  Stock vial {{ entity }}
  {{ status.vial(entity) }}
{% endblock modal_header %}

{% block modal_body %}
  {{ s.row("Setup date", entity.setupDate | date("d F Y")) }}
  {{ s.row("Flip date", entity.flipDate | date("d F Y")) }}
  {{ s.row("Stock", entity.stock, 'bluemesa_flies_stock_show', null, 'stock', entity.stock.genotype) }}
  <div class="form-group">
    <a class="control-label col-sm-3 collapse-toggle" data-toggle="collapse" href="#more"><strong>More information</strong></a>
  </div>
  <div id="more" class="collapse">
    {{ s.row("Location", entity.location) }}
    {{ s.user("Created by", owner) }}
    {{ s.row("Notes", entity.notes) }}
  </div>
  <div class="form-group">
    <a class="control-label col-sm-3 collapse-toggle" data-toggle="collapse" href="#development">
      <strong>Development</strong></a>
  </div>
  <div id="development" class="collapse">
    {{ s.row("Generation", entity.progress // 1 + 1 ) }}
    {{ s.stage(entity) }}
    {{ s.development(entity) }}
  </div>
  <div class="form-group">
    <a class="control-label col-sm-3 collapse-toggle" data-toggle="collapse" href="#vials"><strong>Vials</strong></a>
  </div>
  <div id="vials" class="collapse">
    {{ s.row("Flipped from", entity.parent, 'bluemesa_flies_stockvial_show', null, 'vial') }}
    {{ s.list("Flipped to", entity.children, 'bluemesa_flies_stockvial_show', null, 'vial') }}
  </div>
{% endblock modal_body %}

{% block modal_footer %}
  {{ s.buttons(entity, 'bluemesa_flies_stockvial') }}
{% endblock modal_footer %}
