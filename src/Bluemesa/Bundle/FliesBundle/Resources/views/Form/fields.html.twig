{% block food_widget %}
  {% spaceless %}
    {% set attr = attr|merge({
        'class': attr.class|default('') ~ ' foodselect',
        'data-link': path('bluemesa_flies_ajax_foods') }) %}
    {{ block('form_widget_simple') }}
  {% endspaceless %}
{% endblock %}

{% block genotype_widget %}
  {% spaceless %}
    {% set attr = attr|merge({
        'class': attr.class|default('') ~ ' genotype-typeahead',
        'data-link': data_link|default(''),
        'autocomplete': 'off' }) %}
    {{ block('form_widget_simple') }}
  {% endspaceless %}
{% endblock %}
