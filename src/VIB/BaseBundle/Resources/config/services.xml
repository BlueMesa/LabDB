<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    
    <parameters>
        <parameter key="vib_base.converter.doctrine.class">VIB\BaseBundle\Request\ParamConverter\DoctrineParamConverter</parameter>
    </parameters>
    
    <services>
        <service id="vib_base.converter.doctrine.orm" class="%vib_base.converter.doctrine.class%">
            <tag name="request.param_converter" priority="2" converter="vib.doctrine.orm" />
            <argument type="service" id="doctrine" on-invalid="ignore" />
        </service>
    </services>
</container>
