{% extends "VIBFliesBundle::layout.html.twig" %}

{% block headline %}Stocks{% endblock headline %}

{% block content_sidebar %}
{% block sidebar_display %}
<form class="panel panel-default panel-condensed" action="{{ path('vib_flies_stock_list') }}" method="GET">
  <div class="panel-heading">
    <h3 class="panel-title"><a data-toggle="collapse" href="#dislpay">List options</a></h3>
  </div>
  <ul id="dislpay" class="list-group collapse mobile-collapsed in">
    {% block sidebar_display_access %}
    <li class="list-group-item">
      <h5>Access</h5>
      <ul>
        <li>
          <label>
            <input type="radio" name="access" id="access_mtnt" value="mtnt"
              {{ (filter is  defined and filter.access == 'mtnt') ? 'checked' }} >
            Maintained stocks
          </label>
        </li>
        <li>
          <label>
            <input type="radio" name="access" id="access_private" value="private"
              {{ (filter is  defined and filter.access == 'private') ? 'checked' }} >
            Private stocks
          </label>
        </li>
        <li>
          <label>
            <input type="radio" name="access" id="access_shared" value="shared"
              {{ (filter is defined and filter.access == 'shared') ? 'checked' }} >
            Shared stocks
          </label>
        </li>
        <li>
          <label>
            <input type="radio" name="access" id="access_public" value="public"
              {{ (filter is defined and filter.access == 'public') ? 'checked' }} >
            Public stocks
          </label>
        </li>
      </ul>
    </li>
    {% endblock sidebar_display_access %}
    {% block sidebar_display_sort %}
    <li class="list-group-item">
      <h5>Sort by</h5>
      <ul>
        <li>
          <label>
            <input type="radio" name="sort" id="sort_name" value="name"
              {{ (filter is not defined or filter.sort == 'name') ? 'checked' }} >
            Name
          </label>
        </li>
        <li>
          <label>
            <input type="radio" name="sort" id="sort_gen" value="gen"
              {{ (filter is defined and filter.sort == 'gen') ? 'checked' }} >
            Genotype
          </label>
        </li>
        <li>
          <label>
            <input type="radio" name="sort" id="sort_vial" value="vial"
              {{ (filter is defined and filter.sort == 'vial') ? 'checked' }} >
            Vial number
          </label>
        </li>
        <li>
          <label>
            <input type="checkbox" name="order" id="order" value="desc"
              {{ (filter is defined and filter.order == 'desc') ? 'checked' }} >
            Descending
          </label>
        </li>
      </ul>
    </li>
    {% endblock sidebar_display_sort %}
    <li class="panel-footer">
      <input type="hidden" name="resolver" value="on">
      <button type="submit" class="btn btn-primary btn-sm btn-block">
        List stocks
      </button>
    </li>
  </ul>
</form>
{% endblock sidebar_display %} 
{% block sidebar_actions %}
<div class="panel panel-default panel-condensed">
  <div class="panel-heading">
    <h3 class="panel-title"><a data-toggle="collapse" href="#actions">Actions</a></h3>
  </div>
  <ul id="actions" class="list-group collapse mobile-collapsed in">
    <a class="list-group-item" href="{{ path('vib_flies_stock_create') }}">New stock</a>
    <a class="list-group-item" href="{{ path('vib_flies_vial_expand') }}">Expand stock</a>
    <a class="list-group-item" href="{{ path('vib_flies_stockvial_create') }}">New stock vial</a>
    <a class="list-group-item" href="{{ path('vib_flies_vial_give') }}">Give vial</a>
  </ul>
</div>
{% endblock sidebar_actions %}
{{ parent() }}
{% endblock content_sidebar %}
