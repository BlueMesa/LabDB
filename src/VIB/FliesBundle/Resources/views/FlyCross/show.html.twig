{% extends "VIBBaseBundle:Show:modal.html.twig" %}

{% block modal_header %}Cross {{ entity.name }} ({{ entity.vial.name }}){% endblock modal_header %}

{% block modal_body %}
  {% if entity.vial is not empty %}
    {{ s.row("Setup date:", entity.vial.setupDate | date("d F Y")) }}
    {{ s.row("Check date:", entity.vial.flipDate | date("d F Y")) }}
  {% endif %}
  {{ s.crow("Virgin:", entity.virgin, entity.virginName, 'flyvial_show') }}
  {{ s.crow("Male:", entity.male ,entity.maleName, 'flyvial_show') }}
  {{ s.lrow("Stocks:", entity.stocks, 'flystock_show') }}
  {{ s.lrow("Crosses:", entity.livingCrosses, 'flycross_show') }}
{% endblock modal_body %}

{% block modal_footer %}
  {{ s.buttons(entity, 'flycross') }}
{% endblock modal_footer %}
