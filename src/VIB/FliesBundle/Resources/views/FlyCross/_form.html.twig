{% import 'VIBFliesBundle:Macros:form.html.twig' as f %}
{% import 'VIBFliesBundle:Macros:jquery.html.twig' as jq %}

<form action="{{ app.request.requestUri }}"
      method="post" {{ form_enctype(form) }}>

    {{ form_errors(form) }}
    
    <table class="data">
        {{ f.tr_crow(form.virgin, form.virginName, cross.virgin, 'getVial(this)') }}
        {{ f.tr_crow(form.male, form.maleName, cross.male, 'getVial(this)') }}
        {{ f.tr_row(form.vial.setupDate) }}
        {{ f.tr_row(form.vial.flipDate) }}
    </table>
    
    {{ form_rest(form) }}

    {{ jq.button('Cancel',path('flycross_show', { 'id': cross.id }),'ui-icon-closethick') }}
    {{ jq.button('Reset',app.request.requestUri,'ui-icon-refresh') }}
    {{ jq.submit_button('Save','ui-icon-disk') }}
</form>
