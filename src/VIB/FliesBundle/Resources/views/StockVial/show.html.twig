{% extends "VIBFliesBundle:StockVial:layout.html.twig" %}
{% use "VIBBaseBundle:Show:modal.html.twig" %}
{% import "VIBBaseBundle:Macros:show.html.twig" as s %}

{% block modal_header %}Stock vial {{ entity }}{% endblock modal_header %}

{% block modal_body %}
  {{ s.row("Setup date", entity.setupDate | date("d F Y")) }}
  {{ s.row("Flip date", entity.flipDate | date("d F Y")) }}
  {{ s.user("Created by", owner) }}
  {{ s.row("Stock", entity.stock, 'vib_flies_stock_show', null, 'stock') }}
  {{ s.row("Flipped from", entity.parent, 'vib_flies_stockvial_show', null, 'vial') }}
  {{ s.list("Flipped to", entity.children, 'vib_flies_stockvial_show', null, 'vial') }}
{% endblock modal_body %}

{% block modal_footer %}
  {{ s.buttons(entity, 'vib_flies_stockvial') }}
{% endblock modal_footer %}
