{% extends "VIBFliesBundle::layout.html.twig" %}
{% import 'VIBFliesBundle:Macros:jquery.html.twig' as jq %}
{% import 'VIBFliesBundle:Macros:show.html.twig' as s %}

{% block content %}
<h1>Stocks</h1>
<table class="ui-table">
    {% include 'VIBFliesBundle:FlyStock:_stock_table.html.twig' with {'stocks': stocks} %}
    {% if pager.nbPages > 1%}
    <tfoot>
        <tr>
            <td colspan="8">{{ s.pager(pager,'flystock_listpage') }}</td>
        </tr>
    </tfoot>
    {% endif %}
</table>

{{ jq.button('New',path('flystock_create'),'ui-icon-document') }}
{{ jq.button('Expand',path('flyvial_expand'),'ui-icon-copy') }}

{% endblock %}
